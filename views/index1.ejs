<!doctype html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Medicon - online pharmacy</title>
  <!-- Font awesome -->
  <link rel="stylesheet"
    href="https://cdn.jsdelivr.net/npm/@fortawesome/fontawesome-free@5.15.4/css/fontawesome.min.css">
  <script src="https://kit.fontawesome.com/1f1f6f32bc.js" crossorigin="anonymous"></script>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <!-- CSS stylesheets -->
  <link rel="stylesheet" href="/style.css">
  <link rel="stylesheet" href="/headers.css">
  <link rel="stylesheet" href="/boxes.css">
  <!-- favicon -->
  <link rel="apple-touch-icon" sizes="180x180" href="/favicon/apple-touch-icon.png">
  <link rel="icon" type="image/png" sizes="32x32" href="/favicon/favicon-32x32.png">
  <link rel="icon" type="image/png" sizes="16x16" href="/favicon/favicon-16x16.png">
  <link rel="manifest" href="/favicon/site.webmanifest">
  <!-- Google fonts - "ubuntu" -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link
    href="https://fonts.googleapis.com/css2?family=Montserrat:wght@100;300;600&family=Ubuntu:wght@300;400&display=swap"
    rel="stylesheet">
</head>

<body>

  <!--Navigation bar-->
  <%- include('./partials/nav.ejs') %>

    <!-- Search bar and Login/Signup -->
    <div id="searchbar">
      <div class="container d-flex flex-wrap justify-content-center" id="search">
        <form class="d-flex" style="position: relative;
                                    right : 300px;">
          <input class="form-control me-2" type="search" placeholder="Search medicines/Healthcare products..."
            aria-label="Search">
          <button class="btn btn-dark" type="submit"><i class="fa-solid fa-magnifying-glass"></i>
          </button>
        </form>
        <div class="text-end">
          <a href="/login">
            <button type="button" class="btn btn-dark"><span class="fa-solid fa-arrow-right-from-bracket"></span>
              Logout</button>
          </a>
        </div>
      </div>
    </div>
    </header>


    <!-- Slideshow -->
    <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img src="/images/babycare.jpg" class="d-block w-100" alt="slide-1" width="100%" height="700px">
        </div>
        <div class="carousel-item">
          <img src="/images/womens.jpg" class="d-block w-100" alt="slide-2" width="100%" height="700px">
        </div>
        <div class="carousel-item">
          <img src="/images/prolyte.jpeg" class="d-block w-100" alt="slide-3" width="100%" height="700px">
        </div>
        <div class="carousel-item">
          <img src="/images/cofsils.jpeg" class="d-block w-100" alt="slide-4" width="100%" height="700px">
        </div>
        <div class="carousel-item">
          <img src="/images/nicotex.jpeg" class="d-block w-100" alt="slide-5" width="100%" height="700px">
        </div>
      </div>
      <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls"
        data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls"
        data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
    </div>

    <!-- Boxes -->
    <div class="row">

      <div id="frame-3">
        <div class="boxes" id="boxes">

          <div class="box" id="box-1" class="col-lg-4 col-md-4 col-sm-4">
            <div class="icon">
              <i class="fa fa-capsules"></i>
            </div>
            <div class="content">
              <h3>Medicines</h3>
              <p>Order medicines through Medicon online pharmacy.</p>
            </div>
          </div>

          <a href="/healthcare_products">
            <div class="box" id="box-2" class="col-lg-4 col-md-4 col-sm-4">
              <div class="icon" id="icon-2">
                <i class="fa fa-boxes-stacked"></i>
              </div>
              <div class="content">
                <h3>Healthcare Products</h3>
                <p>Order Healthcare products through Medicon online pharmacy.</p>
              </div>
            </div>
          </a>

          <a href="/Labtests">
            <div class="box" id="box-3" class="col-lg-4 col-md-4 col-sm-4">
              <div class="icon" id="icon-3">
                <i class="fa fa-flask"></i>
              </div>
              <div class="content">
                <h3>Lab tests</h3>
                <p>Online Labtest status through Medicon online pharmacy.</p>
              </div>
            </div>
        </div>
        </a>

      </div>

      <!-- Brand slider -->
      <%- include('./partials/brandslider.ejs') %>


        <!-- Footer -->
        <%- include('./partials/footer.ejs') %>


          <!-- Bootstrap scripts -->
          <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
            crossorigin="anonymous"></script>
          <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"
            integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB"
            crossorigin="anonymous"></script>
          <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"
            integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13"
            crossorigin="anonymous"></script>

</body>

</html>